using namespace std;
 

int main()
{
     float base, altura,area;
	  cout << "               CALCULO DEL AREA DEL TRIANGULO \n\n";
	  cout << "Ingrese Altura : "; 
	  cin  >> (altura); 
	  cout << "Ingrese Base : ";
      cin  >> (base);

