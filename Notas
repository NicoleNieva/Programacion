#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()

{
	int P1,P2,P3,Practico,Final,NotaFinal,Continuar;
	do {
	cout<< "\n\n Ingrese la nota del Primer Parcial: ";
	cin>> P1;
	while (P1>100 | P1<0)
	{
		cout<< "\n\nERROR"  "\n\nIngrese la nota del Primer Parcial:";
		cin>> P1;
	}
	cout<< "\n\n Ingrese la nota del Segundo Parcial: ";
	cin>> P2;
	while (P2>100 | P2<0)
	{
		cout<< "\n\nERROR"  "\n\nIngrese la nota del Segundo Parcial:";
		cin>> P2;
	}
	cout<< "\n\n Ingrese la nota del Tercar Parcial: ";
	cin>> P3;
	while (P3>100 | P3<0)
	{
		cout<< "\n\nERROR"  "\n\nIngrese la nota del Tercer Parcial:";
		cin>> P3;
	}
	cout<< "\n\n Ingrese la nota del Practico: ";
	cin>> Practico;
	while (Practico>100 | Practico<0)
	{
		cout<< "\n\nERROR"  "\n\nIngrese la nota del Practico:";
		cin>> Practico;
	}
	cout<< "\n\n Ingrese el Final: ";
	cin>> Final;
	while (Final>100 | Final<0)
	{
		cout<< "\n\nERROR"  "\n\nIngrese el Final:";
		cin>> Final;
	}
	
	
	NotaFinal=(P1 + P2 + P3) / 3 * 0.4 + Practico * 0.2+ Final * 0.4;
	cout<< "\n\n La Nota Final es: " << NotaFinal;
    
	cout<< "\n\n Desea continuar Presione 1: ";	
	cin>> Continuar;
    }
      
	while (Continuar == 1);

    getch();
}

