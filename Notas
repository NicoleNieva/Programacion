#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()

{
float P1,P2,P3,Practica,Final,NotaFinal,Continuar;
 cout<<  "\t\t\t\t CALCULO DE NOTAS";        
do 
{
cout<< "\n\n Ingrese la nota del Primer Parcial: ";
cin>> P1;
}
while ((P1>100 || P1<0) && (P1 != -99));

while (P1!=-99)
{
	do
{
cout<< "\n\n Ingrese la nota del Segundo Parcial: ";
cin>> P2;
}
while (P2>100 || P2<0);

	do 
	{
cout<< "\n\n Ingrese la nota del Tercar Parcial: ";
cin>> P3;
}
	while (P3>100 || P3<0);

	do
	{
cout<< "\n\n Ingrese la nota Practica: ";
cin>> Practica;
}
while (Practica>100 || Practica<0);

	do
	{
cout<< "\n\n Ingrese el Final: ";
cin>> Final;
}
	while (Final>100 || Final<0);


NotaFinal=(P1 + P2 + P3) / 3 * 0.4 + Practica * 0.2+ Final * 0.4;
cout<< "\n\n La Nota Final es: " ;
cout<< NotaFinal;
do
{
	cout<< "\n\n Ingrese la nota del Primer Parcial: ";
	cin>> P1;
}
while ((P1>100 || P1<0) && (P1!=-99));

}
    getch();
}


