		a = Convert::ToInt16(textBox1->Text);//convierte de text a int
		b = Convert::ToInt16(textBox2->Text);//convierte de text a int
		if (b!=0){
		r = a/b;//algoritmo division
		textBox3->Text = Convert::ToString(r);//convierte de int a text
